{
    "ruby.useLanguageServer": true,
    "ruby.useBundler": false,
    "ruby.format": "rubocop",
    "ruby.lint": {
        "rubocop": {
            "useBundler": false
        }
    },
    "ruby.intellisense": "rubyLocate",
    "ruby.locate": {
        "exclude": "{**/@(test|spec|tmp|.*),**/@(test|spec|tmp|.*)/**,**/*_spec.rb}",
        "include": "**/*.rb"
    },
    "solargraph.formatting": true,
    "solargraph.autoformat": true,
    "solargraph.diagnostics": true,
}